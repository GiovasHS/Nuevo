<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
 <div class="container">
    <!-- comienza form-->

    <div class="container">
        <div class="col-md-6">
        <div class="col-6">
           <div class="card">
               <div class="card-body">
               
                <form action="/add" method="POST">
                    <div class="form-group">
                        <label for="producto" class="form-label">Nombre</label>
                        <input type="text" id="producto" name="producto" placeholder="Producto" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="precio" class="form-label">Precio</label>
                        <input type="number" id="precio" name="precio"  class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="iva" class="form-label">IVA</label>
                        <input type="number" id="iva" name="iva"  class="form-control">
                    </div>
                    <button class="btn btn-primary">Registrar</button>
                </form>

                </div>
           </div>
        </div>
    </div>


    <!-- comienza tabla-->
    <div class="col-8">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">IVA</th>
                    <th scope="col">ID</th>
                    <th scope="col">Opciones</th>

                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < datos.length; i++){  %>
                    <tr>
                        <td><%= i+1  %></td>
                        <td><%= datos[i].producto  %></td>
                        <td><%= datos[i].precio  %></td>
                        <td><%= datos[i].iva %></td>
                        <td><%= datos[i]._id  %></td>
                        <td>
                            <!--<a class="btn btn-primary" href="/del/<%= datos[i].id %>">Eliminar</a>-->
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= datos[i]._id %>">
                                Eliminar
                            </button>
                            <td>
                              <!-- Botón para abrir el modal de edición -->
                              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal<%= datos[i]._id %>">
                                  Editar
                              </button>
                          
                          
                           <!-- Modal -->
<div class="modal fade" id="exampleModal<%= datos[i]._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>Click en confirmar para eliminar.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
          <a href="/del/<%=datos[i]._id %>" class="btn btn-primary">Confirmar</a>
        </div>
      </div>
    </div>
  </div>

   <!-- Modal de edición -->
   <div class="modal fade" id="editModal<%= datos[i]._id %>" tabindex="-1" aria-labelledby="editModalLabel<%= datos[i]._id %>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editModalLabel<%= datos[i]._id %>">Editar Producto</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario para editar los datos -->
                <form action="/upd/<%= datos[i]._id %>" method="GET">
                    <div class="form-group">
                        <label for="editProducto" class="form-label">Nombre</label>
                        <input type="text" id="editProducto" name="editProducto" value="<%= datos[i].producto %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="editPrecio" class="form-label">Precio</label>
                        <input type="number" id="editPrecio" name="editPrecio" value="<%= datos[i].precio %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="editIva" class="form-label">IVA</label>
                        <input type="number" id="editIva" name="editIva" value="<%= datos[i].iva %>" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
                            </td>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

 </div>
 
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
   
</body>
</html>

